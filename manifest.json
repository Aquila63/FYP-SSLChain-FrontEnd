{
    "manifest_version": 2,

    "name": "SSLChain",
    "description": "Extention for working with the SSLChain prototype to encrypt emails",
    "version": "0.1",

    "content_scripts": [
      {
        "matches": [
          "https://mail.google.com/*",
          "https://inbox.google.com/*"
        ],
        "js": ["inboxsdk.js","content.js"],
        "run_at": "document_end"
      }
    ],

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "https://mail.google.com/",
        "https://inbox.google.com/"
     ]
}
